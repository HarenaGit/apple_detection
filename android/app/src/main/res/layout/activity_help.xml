<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/fab_margin"
    >

    <LinearLayout
        android:id="@+id/helpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.ObjectDetection.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"

            app:popupTheme="@style/AppTheme.ObjectDetection.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="8sp" android:text="Apple detection"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
         >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="12sp"
                    android:text=".    Description"
                    android:textColor="@color/tfe_color_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:text="Cette aplication intelligent est une application de test de détéction d'une pomme commestible, d'une autre pourit en temps reel.\nElle vous sert à verifier si une pomme que vous voulez manger ou acheter est vraiment commestible ou non."
                    android:textAlignment="textStart"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="12sp"
                    android:text=".    Exemple"
                    android:textColor="@color/tfe_color_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:text="1/ Quand l'application détecte une mauvaise pomme, elle cadre la pomme sur l'image et vous informe que c'est une pomme pourit qu'elle voit.\nIci elle est sur a 50% que cette pomme est mauvaise."
                    android:textAlignment="textStart"
                    android:typeface="monospace" />

                <ImageView
                    android:id="@+id/mauvaise_pomme"
                    android:layout_width="match_parent"
                    android:layout_height="373dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/mauvaise_pomme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:text="2/ Quand l'application détecte une bonne pomme, elle cadre la pomme sur l'image et vous informe que la pomme est commestible."
                    android:textAlignment="textStart"
                    android:typeface="monospace" />

                <ImageView
                    android:id="@+id/bonne_pomme"
                    android:layout_width="match_parent"
                    android:layout_height="373dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/bonne_pomme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="12sp"
                    android:text=".    Outils"
                    android:textColor="@color/tfe_color_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:text="- Tensorflow avec python3\n-Dataset : https://github.com/OlafenwaMoses/AppleDetection/releases/\n-Android studio avec Java\n:)"
                    android:textAlignment="textStart"
                    android:typeface="monospace" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>